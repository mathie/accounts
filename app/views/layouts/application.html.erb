<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Accounts</title>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="topbar">
      <div class="fill">
        <div class="container">
          <h3><%= link_to 'Accounts', root_path %></h3>

          <ul>
            <%= topnav_link_to 'Purchase Invoices', purchase_invoices_path %>
            <%= topnav_link_to 'Sales Invoices',    sales_invoices_path %>
          </ul>

          <ul class="nav secondary-nav">
            <%= topnav_link_to 'Contacts', contacts_path %>
            <%= topnav_link_to 'Categories', categories_path %>
          </ul>
        </div>
      </div>
    </nav>

    <article id="main" role="main" class="container">
      <section id="flash">
        <% if notice.present? %>
          <div class="alert-message success">
            <a href="#" class="close">x</a>
            <p>
              <%= notice.html_safe %>
            </p>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="alert-message error">
            <a href="#" class="close">x</a>
            <p>
              <%= alert.html_safe %>
            </p>
          </div>
        <% end %>
      </section>

      <%= yield %>
    </article>

    <footer class="container">
      <p>
        Copyright &copy; <%= Date.today.year %>, <%= link_to 'Graeme Mathieson', 'http://woss.name/' %>.
      </p>
    </footer>
  </body>
</html>
