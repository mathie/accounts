<%= form_for category do |f| %>
  <%= form_text_input f, :text_field, :code, disabled: true, class: 'xlarge', size: 30 %>
  <%= form_text_input f, :text_field, :name, autofocus: true, class: 'xlarge', size: 30 %>

  <div class="actions">
    <%= f.submit category.new_record? ? "Create category" : "Update category", class: 'btn primary' %>
    <%= link_to 'Cancel', categories_path, class: 'btn' %>
  </div>
<% end %>
